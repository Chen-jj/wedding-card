{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "functionRoot": "./wedding-card-api/dist",
  "framework": {
    "name": "wedding-card",
    "hooks": {
      "preDeploy": {
        "type": "execCommand",
        "commands": [
          "npm install -g typescript --prefer-offline --no-audit --progress=false",
          "cd wedding-card-api && npm install --prefer-offline --no-audit --progress=false && npm run build"
        ]
      }
    },
    "plugins": {
      "function": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "./wedding-card-api/dist",
          "functions": [
            {
              "name": "{{env.API_NAME}}",
              "envVariables": {
                "ADMIN": "{{env.ADMIN}}",
                "COVER": "{{env.COVER}}",
                "MUSIC": "{{env.MUSIC}}",
                "ALBUM": "{{env.ALBUM}}",
                "FAVICON": "{{env.FAVICON}}",
                "API_NAME": "{{env.API_NAME}}"
              }
            }
          ],
          "servicePaths": {
            "{{env.API_NAME}}": "/{{env.API_NAME}}"
          }
        }
      },
      "web": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "installCommand": "cd wedding-card-web && npm install --prefer-offline --no-audit --progress=false",
          "buildCommand": "cd wedding-card-web && npm run build",
          "outputPath": "wedding-card-web/dist",
          "envVariables": {
            "API_NAME": "{{env.API_NAME}}",
            "GROOM": "{{env.GROOM}}",
            "BRIDE": "{{env.BRIDE}}",
            "DATE": "{{env.DATE}}",
            "ADDR": "{{env.ADDR}}",
            "PHONE": "{{env.PHONE}}"
          }
        }
      },
      "db": {
        "use": "@cloudbase/framework-plugin-database",
        "inputs": {
          "collections": [
            {
              "collectionName": "people"
            }
          ]
        }
      }
    }
  }
}
